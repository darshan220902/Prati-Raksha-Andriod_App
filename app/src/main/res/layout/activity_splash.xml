<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/adbgd">

    <TextView
        android:id="@+id/sparkText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/sparkImg"
        android:layout_centerHorizontal="true"
        android:fontFamily="cursive"
        android:text="PratiRaksha"
        android:textColor="#803A99"
        android:textSize="45sp"
        android:textStyle="bold" />

        <ImageView
            android:id="@+id/sparkImg"
            android:layout_width="600px"
            android:layout_height="700px"
            android:layout_centerInParent="true"
            android:paddingStart="30dp"
            android:src="@drawable/beauty" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/slang"
        android:layout_below="@id/sparkImg"
        android:text="Safety fits like a glove ; Try one on"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"/>


    <Button
        android:id="@+id/btnGetStarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/slang"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40px"
        android:backgroundTint="#D573C4"
        android:text="get started" />

    </RelativeLayout>

</RelativeLayout>